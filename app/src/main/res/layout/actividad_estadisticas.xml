<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="2dp" >


    <EditText
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:text="Buscar:" />

    <Button
        android:id="@+id/button4"
        android:layout_width="134dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:text="Universidades con mayor numero de alumnos" />

    <Button
        android:id="@+id/button8"
        android:layout_width="134dp"
        android:layout_height="97dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:text="Universidades que no imparten la carrera" />

    <Button
        android:id="@+id/button6"
        android:layout_width="134dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        android:text="Numero de carreras en esa universidad" />

    <Button
        android:id="@+id/button7"
        android:layout_width="134dp"
        android:layout_height="101dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button6"
        android:text="Universidades del ese estado" />

    <TextView
        android:id="@+id/respText"
        android:layout_width="368dp"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:visibility="invisible" />

</RelativeLayout>